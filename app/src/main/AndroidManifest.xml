<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dailyteedeals.dailyapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.DTD"
        android:name="com.dailyteedeals.dailyapp.DTDApplication">
        <activity
            android:name="com.dailyteedeals.dailyapp.ui.main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dailyteedeals.dailyapp.ui.SearchActivity"
            android:label="@string/title_activity_search" />
        <activity
            android:name="com.dailyteedeals.dailyapp.ui.detail.DetailActivity"
            android:label="@string/title_activity_product"
            android:theme="@style/Theme.DTD.TransparentStatus"
            android:noHistory="true"/>
        <activity
            android:name="com.dailyteedeals.dailyapp.ui.SettingsActivity"
            android:label="@string/title_activity_settings"/>
        <service
            android:name="com.dailyteedeals.dailyapp.service.NotificationService"
            android:enabled="true"
            android:exported="true">
        </service>

        <receiver android:name="com.dailyteedeals.dailyapp.receiver.AlarmReceiver" />
        <receiver android:name="com.dailyteedeals.dailyapp.receiver.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>