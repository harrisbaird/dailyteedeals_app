<resources>
    <!-- Root styles that vary by API level -->
    <!-- Disable RTL support on older devices -->
    <!-- Prevents crash on certain devices to namespace conflict -->
    <style name="FrameworkRoot.Theme" parent="Theme.AppCompat" />
    <style name="FrameworkRoot.Widget" parent="Theme.AppCompat" />

    <!-- Immediate parent theme to specify base values for custom attributes -->
    <style name="Theme" parent="FrameworkRoot.Theme" />

    <style name="Theme.DTD.Base" parent="Theme">
        <item name="actionBarIconColor">#fff</item>
        <item name="actionBarInsetStart">@dimen/keyline_2</item>
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>

        <item name="windowActionBar">false</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/theme_window_background</item>

        <item name="android:textColorPrimary">@android:color/white</item>
        <!--<item name="android:fontFamily">@string/font_fontFamily_medium</item>-->
    </style>

    <style name="Theme.DTD" parent="Theme.DTD.Base" />

    <style name="Theme.DTD.TransparentStatus" parent="Theme.DTD" />

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">?actionBarIconColor</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat" />

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.DTD.Text" />

    <style name="Theme.DTD.Text.GridShadow">
        <item name="android:shadowColor">#bf000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="Theme.DTD.Text.GridTitle" parent="Theme.DTD.Text.GridShadow">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#ddffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">@integer/font_textStyle_medium</item>
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
    </style>

    <style name="Theme.DTD.Text.GridSubhead" parent="Theme.DTD.Text.GridTitle">
        <item name="android:textColor">#aaffffff</item>
    </style>

    <style name="Theme.DTD.Text.DetailTitle">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">@dimen/detail_header_text_size</item>
        <item name="android:textStyle">@integer/font_textStyle_medium</item>
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
    </style>

    <style name="Theme.DTD.Text.DetailSubtitle" parent="Theme.DTD.Text.DetailTitle">
        <item name="android:textColor">#d3ffffff</item>
        <item name="android:textSize">@dimen/detail_subheader_text_size</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
    </style>
</resources>
